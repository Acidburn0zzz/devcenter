                %li
                  %a{href: "/en/php-tutorials-and-examples.html"} Tutorials and Examples
                %li
                  %a{href: "/en/php-tooling.html"} Tooling
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          %ol.breadcrumb
            %li
              %a{href: "/en"} Home
            %li
              %a{href: "/en/php"} PHP
          ~ content
      .row
        %hr
        %footer
    = partial( 'scripts.html.haml' )
