!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title Developer Center
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    =partial( 'styles.html.haml' );
  %body
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} OpenShift Developer Center
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: "#"} Documentation
            %li
              %a{href: "#"} Support
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Content
                %span.caret
              %ul.dropdown-menu{role: "menu"}
                %li
                  %a{href: "/en/main-introduction-to-paas.html"} Intro to PaaS
                %li
                  %a{href: "/en/main-getting-started.html"} Getting Started
                %li
                  %a{href: "/en/main-platform-features.html"} Platform Features
                %li.divider
                %li
                  %a{href: "/en/java-overview.html"} Java
                %li
                  %a{href: "/en/php-overview.html"} PHP
          %form.navbar-form.navbar-right
            %input.form-control{placeholder: "Search...", type: "text"}/
            / /.nav-collapse
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          %ul.nav.nav-sidebar
            %li
              %a{href: "/en/main-introduction-to-paas.html"} Introduction to PaaS
            %li
              %a{href: "/en/main-getting-started.html"} Getting Started
            %li
              %a{href: "/en/main-platform-features.html"} Platform Features
            %li.divider
          %ul.nav.nav-sidebar
            %li.nav-header
              %a{"data-target" => "#javaMenu", "data-toggle" => "collapse", href: "#"}
                Java
                %span.glyphicon.glyphicon-chevron-right
              %ul#javaMenu.collapse{style: "list-style: none;"}
                %li
                  %a{href: "/en/java-overview.html"} Java Home
                %li
                  %a{href: "/en/java-migrating-an-existing-application.html"} Migrating an Existing App
                %li
                  %a{href: "/en/java-storing-data.html"} Storing Data
                %li
                  %a{href: "/en/java-services.html"} Services
                %li
                  %a{href: "/en/java-advanced-use-cases.html"} Advanced Use Cases
                %li
                  %a{href: "/en/java-managing-an-application.html"} Managing an Application
                %li
                  %a{href: "/en/java-featured-java-apps.html"} Featured Java Apps
                %li
                  %a{href: "/en/java-tutorials-and-examples.html"} Tutorials and Examples
                %li
                  %a{href: "/en/java-tooling.html"} Tooling
            %li.nav-header.active
              %a{"data-target" => "#phpMenu", "data-toggle" => "collapse", href: "#"}
                PHP
                %span.glyphicon.glyphicon-chevron-down
              %ul#phpMenu.collapse.in{style: "list-style: none;"}
                %li
                  %a{href: "/en/php-overview.html"} PHP Home
                %li
                  %a{href: "/en/php-migrating-an-existing-application.html"} Migrating an Existing App
                %li
                  %a{href: "/en/php-storing-data.html"} Storing Data
                %li
                  %a{href: "/en/php-services.html"} Services
                %li
                  %a{href: "/en/php-advanced-use-cases.html"} Advanced Use Cases
